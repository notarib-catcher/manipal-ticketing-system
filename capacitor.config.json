{
  "appId": "in.mitblrfest.ticketing",
  "appName": "manipal-ticketing-client",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "plugins": {
    "CapacitorHttp": {
      "enabled": true
    },
    "SplashScreen": {
      "showSpinner": true,
      "androidSpinnerStyle": "small",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#ffffff",
      "backgroundColor": "#21252dff",
      "splashFullScreen": true,
      "androidScaleType": "CENTER_CROP",
      "splashImmersive": false
    },
    "PrivacyScreen": {
      "enable": true
    }
  },
  "showSpinner" : true
}
